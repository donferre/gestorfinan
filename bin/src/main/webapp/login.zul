<?page title="Gestor Financiero" language="xul/html" zscriptLanguage="Java" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?link id="favicon" rel="shortcut icon" type="image/x-icon" href="https://static-00.iconduck.com/assets.00/file-type-favicon-icon-2048x2048-q7lmo5fn.png"?>
<?link rel="stylesheet" type="text/css" href="/resources/styles/style.css"?>
<!-- Bootraps-Icon -->
<?link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"?>
<?link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"?>
<zk xmlns:n="native"
    xmlns:h="http://www.zkoss.org/2005/zk/native"
    xmlns:w="http://www.zkoss.org/2005/zk/client">
    <window id="win_login" width="100%" height="100%" use="com.italoweb.gestorfinan.controller.LoginController">
        <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
            <div class="card text-center shadow-lg p-4" style="width: 40rem;">
                <div class="card-body">
                    <image src="https://images.vexels.com/media/users/3/137617/isolated/preview/c45afb857e72b86e87baaf255f71ff37-resumen-logo-geometrico.png" width="150px;"></image>
                    <n:p class="card-text fs-4">Ingrese sus credenciales</n:p>
                    <div class="mb-3 text-start">
                        <label value="Usuario" class="form-label fw-bold"></label>
                        <textbox id="txtUsuario" sclass="form-control" placeholder="Ingrese su usuario" constraint="no empty"/>
                    </div>
                    <div class="mb-3 text-start">
                        <label value="Contraseña" class="form-label fw-bold"></label>
                        <textbox id="txtPassword" type="password" sclass="form-control" placeholder="Ingrese su contraseña" constraint="no empty"/>
                    </div>
                    <div class="d-grid">
                        <button id="button" class="btn btn-primary btn-lg" label="Iniciar sesión"/>
                    </div>
                </div>
            </div>
        </div>
    </window>
</zk>
